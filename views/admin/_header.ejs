<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/admin.css">
  <!-- Quill editor (for article forms) -->
  <link href="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.snow.css" rel="stylesheet">
  <script defer src="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.min.js"></script>
  <script defer src="/js/admin.js"></script>
</head>
<body class="admin-body">
  <main class="container-admin">
    <div class="admin-topbar">
      <div class="admin-topbar-inner">
        <div>
          <div class="admin-brand">Panel Administracyjny CMS</div>
          <div class="admin-sub">PIW Giżycko</div>
        </div>
        <div>
          <% if (typeof adminUser !== 'undefined' && adminUser) { %>
            <span>Zalogowany jako: <strong><%= adminUser.username %></strong></span>
          <% } %>
          <form method="post" action="/admin/logout" style="display:inline-block;margin-left:.5rem;">
            <button type="submit" class="admin-logout">Wyloguj</button>
          </form>
        </div>
      </div>
    </div>
    <div class="admin-breadcrumbs">
      <a href="/admin">Panel Admin</a>
      <% if (typeof activeTab !== 'undefined' && activeTab !== 'dashboard') { 
           const labels = { dashboard: 'Dashboard', articles: 'Artykuły', analytics: 'Analityka', menu: 'Menu', settings: 'Ustawienia', users: 'Użytkownicy' };
           const activeLabel = labels[activeTab] || activeTab;
      %>
        / <span><%= activeLabel %></span>
      <% } %>
    </div>
    <nav class="admin-tabs">
      <a href="/admin" class="<%= activeTab==='dashboard' ? 'active' : '' %>">Dashboard</a>
      <a href="/admin/articles" class="<%= activeTab==='articles' ? 'active' : '' %>">Artykuły</a>
      <a href="/admin/analytics" class="<%= activeTab==='analytics' ? 'active' : '' %>">Analityka</a>
      <a href="/admin/menu" class="<%= activeTab==='menu' ? 'active' : '' %>">Menu</a>
      <a href="/admin/settings" class="<%= activeTab==='settings' ? 'active' : '' %>">Ustawienia</a>
      <a href="/admin/users" class="<%= activeTab==='users' ? 'active' : '' %>">Użytkownicy</a>
    </nav>

